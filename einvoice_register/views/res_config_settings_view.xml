<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_einvoice" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.einvoice</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='fiscal_localization_setting_container']" position="after">
                <h2>Fiscalization</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
<!--                        <div class="o_setting_left_pane">-->
<!--                        </div>-->
                        <div class="o_setting_right_pane">
                            <label for="enable_fiscalization"/>
                                                        <field name="enable_fiscalization"/>

                            <div class="text-muted">
                                Enable Invoice Fiscalization
                            </div>
                        </div>
                    </div>
                </div>

            </xpath>
        </field>
    </record>
</odoo>
