<odoo>
    <record id="fiscalization_account_bank_statement_cashbox_inherit" model="ir.ui.view">
        <field name="name">account.bank.statement.cashbox.inherit</field>
        <field name="model">account.bank.statement.cashbox</field>
        <field name="inherit_id" ref="account.view_account_bnk_stmt_cashbox"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="before">
                <field name="pos_config_id" nolabel="1" class="oe_inline" readonly="1"/>

                <group>
                    <field name="direct_amount_input"/>
                    <field name="is_initial_cash"/>
                    <field name="direct_amount" attrs="{'invisible': [('direct_amount_input','=',False)]}"/>
                </group>
            </xpath>
            <xpath expr="//field[@name='cashbox_lines_ids']" position="attributes">
                <attribute name="attrs">{'invisible': [('direct_amount_input','=',True)]}</attribute>
            </xpath>
        </field>
    </record>

