<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="account_report_partner_ledger_view"
			model="ir.ui.view">
			<field name="name">Partner Ledger</field>
			<field name="model">account.common.report.wiz</field>
			<field name="arch" type="xml">
				<form string="Report Options">
					<group>
						<group>
							<field name="pl_partner_ids" widget="many2many_tags" 
							options="{'no_create': True,'no_quick_create': True,'no_open': True, 'no_create_edit': True}" invisible="context.get('partner_pl', False)"/>
							<field name="date_from" />
							<field name="date_to" />
							<field name="target_move" widget="radio" />
						</group>
						<group>
							<field name="currency_id" options="{'no_create': True,'no_quick_create': True,'no_open': True, 'no_create_edit': True}"/>
							<field name="result_selection" />
							<field name="with_initial" />
						</group>
					</group>

					<footer>
						<button name="print_report_fc" string="Print" type="object"
							default_focus="1" class="oe_highlight" />
						<button name="export_excel_fc" string="Export To Excel"
							type="object" default_focus="1" class="oe_highlight" />
						<button string="Cancel" class="btn btn-default"
							special="cancel" />
					</footer>
				</form>
			</field>
		</record>

		<record id="action_account_partner_ledger" model="ir.actions.act_window">
			<field name="name">Partner Ledger With Currency</field>
			<field name="res_model">account.common.report.wiz</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="account_report_partner_ledger_view" />
			<field name="target">new</field>
		</record>
		
		<menuitem id="action_account_partner_ledger_menu" parent="account.account_reports_management_menu" action="action_account_partner_ledger" sequence="20"/>

		<record id="pl_excel_form" model="ir.ui.view">
			<field name="name">partner.ledger.download.form</field>
			<field name="model">partner.ledger.download</field>
			<field name="arch" type="xml">
				<form>
					<group>
						<field name="excel_file" readonly="1" filename="file_name" />
						<field name="file_name" invisible="1" />
					</group>
					<footer>
						<button string="Close" class="btn-secondary"
							special="cancel" />
					</footer>
				</form>
			</field>
		</record>
		
		<record id="action_account_partner_ledger_menu_print" model="ir.actions.act_window">
			<field name="name">Partner Ledger</field>
			<field name="res_model">account.common.report.wiz</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="account_report_partner_ledger_view" />
			<field name="target">new</field>
			<field name="binding_model_id" ref="base.model_res_partner" />
			<field name="binding_type">report</field>
			<field name="context">{'partner_pl': True}</field>
		</record>
	</data>
</odoo>
