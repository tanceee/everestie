<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="PaymentScreenTheme" t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('payment-controls')]" position="inside">
            <br/>
            <div t-if="env.pos.config.enable_invoice_report" class="button"
                t-att-class="{ highlight: invoice_report }"
                t-on-click="toggleIsinvoice_report">
                <i class="fa fa-file-text-o" /> Invoice Report Details
            </div>
            <br/>
            <div t-if="env.pos.config.enable_details_invoice_report" class="button"
                t-att-class="{ highlight: invoice_detais }"
                t-on-click="toggleIsinvoicedetails_report">
                <i class="fa fa-file-text-o" /> Details Of Invoice
            </div>
        </xpath>
    </t>

    <t t-name="InvoiceButtonDetails" owl="1">
        <div class="control-button">
            <i class="fa fa-file-pdf-o"></i>
            <span>Invoice Report Details</span>
            <span><t t-esc="commandName"></t></span>
        </div>
    </t>

    <t t-name="DetailsOfInvoice" owl="1">
        <div class="control-button">
            <i class="fa fa-file-pdf-o"></i>
            <span>Details Of Invoice</span>
            <span><t t-esc="commandName"></t></span>
        </div>
    </t>

    <t t-name="TicketScreenAdd" t-inherit="point_of_sale.TicketScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('leftpane')]/div[hasclass('pads')]/div[hasclass('control-buttons')]" position="inside">
            <InvoiceButtonDetails t-if="env.pos.config.module_account" order="_selectedSyncedOrder" />
            <DetailsOfInvoice t-if="env.pos.config.module_account" order="_selectedSyncedOrder"/>
        </xpath>
    </t>


</templates>