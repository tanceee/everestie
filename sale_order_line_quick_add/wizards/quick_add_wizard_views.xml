<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="sale_order_line_quick_add_wizard_form">
            <field name="name">sale_order_line_quick_add form</field>
            <field name="model">quick.order.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group string="Filters">
                        <group>
                            <field name="created" invisible="1"/>
                            <field name="order_id" invisible="1"/>
                            <field name="default_code"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="name"/>
                            <field name="category_id"/>
                        </group>
                    </group>
                    <group string="Filtered Products">
                        <field name="line_ids" nolabel="1">
                            <tree editable="bottom" create="0" decoration-success="qty > 0">
                                <field name="qty"/>
                                <field name="product_uom" groups="uom.group_uom"
                                       options="{'no_create': True, 'no_open': True}" required="1"/>
                                <field name="product_id" readonly="1" force_save="1"/>
                                <field name="description" optional="hide"/>
                                <field name="default_code"/>
                                <field name="category_id"/>
                                <field name="product_template_variant_value_ids" widget="many2many_tags"
                                       optional="hide"/>
                                <field name="lst_price" optional="hide"/>
                                <field name="standard_price" optional="hide"/>
                                <field name="qty_available" optional="hide"/>
                                <field name="virtual_available" optional="hide"/>
                                <field name="uom_id" optional="hide" groups="uom.group_uom"/>
                                <field name="type" optional="hide"/>
                                <field name="product_uom_category_id" invisible="1"/>
                            </tree>
                        </field>
                    </group>

                    <field name="add_line_ids" invisible="1">
                        <tree>
                            <field name="product_id"/>
                            <field name="qty"/>
                            <field name="product_uom"/>
                        </tree>
                    </field>
                    <footer>
                        <button name="action_add_lines" string="Add Order Lines" type="object"
                                class="btn-primary" data-hotkey="a"/>
                        <button special="cancel" data-hotkey="z" string="Cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>