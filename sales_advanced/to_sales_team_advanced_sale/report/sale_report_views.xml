<odoo>

	<record id="view_order_product_search" model="ir.ui.view">
		<field name="name">sale.report.search</field>
		<field name="model">sale.report</field>
		<field name="inherit_id" ref="sale.view_order_product_search" />
		<field name="arch" type="xml">
			<xpath expr="//group/filter[@name='User']" position="after">
				<filter string="Team Leader" name="grp_team_leader"
					context="{'group_by':'team_leader_id'}" />
				<filter string="Sales Region" name="grp_sales_region"
					context="{'group_by':'crm_team_region_id'}" />
				<filter string="Regional Manager" name="grp_regional_manager"
					context="{'group_by':'regional_manager_id'}" />
			</xpath>
		</field>
	</record>

</odoo>
