<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="sh_view_pos_config_form_inherit_code">
        <field name="name">pos.config.form.view.inherit</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[4]" position="after">
                <h2 name="enlarge">Enable Product Internal Reference</h2>
                <div class="row mt16 o_settings_container">
                    <div id="autocomplete_address" class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="sh_enable_prduct_code" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_enable_prduct_code" />
                        </div>
                    </div>
                </div>
                <div class="row mt5 o_settings_container">
                    <div id="autocomplete_address" class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="sh_enable_product_code_in_cart" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_enable_product_code_in_cart" />
                        </div>
                    </div>
                </div>
                <div class="row mt5 o_settings_container">
                    <div id="autocomplete_address" class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="sh_enable_product_code_in_receipt" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_enable_product_code_in_receipt" />
                        </div>
                    </div>
                </div>
                
            </xpath>
        </field>
    </record>
</odoo>
