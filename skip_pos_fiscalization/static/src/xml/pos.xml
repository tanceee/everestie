<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="PaymentScreen" t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('payment-controls')]" position="inside">
            <div t-if="!env.pos.disable_fiscalization" class="button"
                 t-att-class="{ highlight: currentOrder.is_skip_fiscalization() }"
                 t-on-click="toggle_skip_fiscalization">
                <i class="fa fa fa-share"/>
                Skip Fiscalization
            </div>
        </xpath>
    </t>
</templates>