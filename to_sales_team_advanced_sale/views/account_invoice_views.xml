<odoo>
    <record id="account_invoice_form" model="ir.ui.view">
        <field name="name">account.invoice.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="sale.account_invoice_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sale_info_group']/field[@name='team_id']" position="after">
                <field name="team_leader_id" groups="base.group_no_one" />
                <field name="regional_manager_id" groups="base.group_no_one" />
                <field name="crm_team_region_id" groups="base.group_no_one" />
            </xpath>
        </field>
    </record>
    <record id="account_invoice_form_group_override" model="ir.ui.view">
        <field name="name">account.invoice.form.group.override</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_post'][1]" position="attributes">
                <attribute name="groups" replace="True">to_sales_team_advanced.group_account_team_leader,to_sales_team_advanced.group_account_team_leader</attribute>
            </xpath>
            <xpath expr="//button[@name='action_post'][2]" position="attributes">
                <attribute name="groups" replace="True">to_sales_team_advanced.group_account_team_leader,to_sales_team_advanced.group_account_team_leader</attribute>
            </xpath>
<!--             <xpath expr="//button[@name='action_register_payment'][1]" position="attributes">
                <attribute name="groups" replace="True">to_sales_team_advanced.group_account_team_leader</attribute>
            </xpath> -->
        </field>
    </record>
</odoo>
