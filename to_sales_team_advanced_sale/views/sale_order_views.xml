<odoo>
	<record id="view_order_form" model="ir.ui.view">
		<field name="name">sale.order.form</field>
		<field name="model">sale.order</field>
		<field name="inherit_id" ref="sale.view_order_form" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='team_id']" position="after">
				<field name="team_leader_id" groups="base.group_no_one" />
				<field name="regional_manager_id" groups="base.group_no_one" />
				<field name="crm_team_region_id" widget="selection" />
				<field name="users_can_change" invisible="1" />
				<field name="teams_can_change" invisible="1" />
			</xpath>
		</field>
	</record>
</odoo>
